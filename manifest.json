{

	"manifest_version": 2,
	"name": "Copy Note",
	"version": "0.0.1",
	"description": "Right-click highlighted text and save it to your notes!",
	"icons": {"128": "Images/icon_128.png"},
	"permissions": ["tabs", "contextMenus"],
	"background": {
		"scripts": ["js/bg.js"],
		"persistent": true
	},
	"browser_action": {
		"default_icon": "Images/icon_19.png",
		"default_title": "Copy Note",
		"default_popup": "popup.html"
	}

}